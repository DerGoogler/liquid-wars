<?xml version="1.0" encoding="utf-8"?>
<manifest
xmlns:android="http://schemas.android.com/apk/res/android"
package="com.xenris.liquidwarsos"
android:versionCode="9"
android:versionName="1.4">

    <uses-sdk
    android:minSdkVersion="10"
    android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <uses-feature android:name="android.hardware.screen.landscape"/>
    <uses-feature android:name="android.hardware.touchscreen"/>

    <application
    android:label="@string/app_name"
    android:icon="@drawable/ic_launcher">

        <activity
        android:name="MainMenuActivity"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
        android:name="InstructionsActivity"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity
        android:name="MultiplayerMenuActivity"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity
        android:name="SinglePlayerGameSetupActivity"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity
        android:name="MultiplayerGameSetupActivity"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity
        android:name="ClientGameSetupActivity"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity
        android:name="GameActivity"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity
        android:name="GameServerActivity"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:configChanges="orientation|keyboardHidden">
        </activity>

        <activity
        android:name="GameClientActivity"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:configChanges="orientation|keyboardHidden">
        </activity>

    </application>

</manifest> 
